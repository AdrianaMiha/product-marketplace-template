<h1 class="mb-6 text-3xl font-medium">
  <a href="/dashboard">{{ 'app.dashboard' | t }}</a>
  / {{ 'app.' | append: role | t }}
  / {{ 'app.items' | t }}
</h1>

<section class="text-gray-700 body-font">
  <div class="container mx-auto">
    <div class="flex flex-wrap -mx-4 cards">
      {% if items.results.size > 0 %}
      {% for item in items.results %}
        {% include 'theme/simple/items/card', item: item %}
      {% endfor %}
      {% else %}
        <p class="container my-8 text-lg text-center">
          <a href="/items/new" class="border-2 rounded p-2">
            {{ 'app.dashboard-items.list-your-first-item' | t }}
          </a>
        </p>
      {% endif %}
    </div>
  </div>
</section>
