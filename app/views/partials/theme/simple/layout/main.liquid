<div class="section hero">
  <div class="container">
    <div class="row">

      <div class="six columns">
        <a href="/"><h1>item-store<small style="font-size: 0.5em"> 0.0.2-alpine</small></h1></a>
      </div>

      <div class="two columns">
        <a href="/items/new" class="button button-primary">List your item</a>
      </div>

      {% if context.session.current_user_id  %}
        <div class="two columns">
          <form action="/sessions/destroy" method="post">
            {% include 'authenticity_token' %}
            <input name="" type="submit" value="log out {% print context.session.current_user_id %}"/>
          </form>
        </div>
      {% else %}
        <div class="two columns">
          <a href="/sessions/new" class=button>login</a>
        </div>
      {% endif %}
    </div>

    {{ content_for_layout }}

    {% include 'layout/scripts' %}
  </div>
</div>
