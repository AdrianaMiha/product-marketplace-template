{% liquid
  assign body = response.body | parse_json
%}
{% log body, type: "RESPONSE BODY........" %}
{%- if response.status == 200 -%}
  {
    {%- if body.error -%}
      "errors": [
        {"message": "{{ body.error.message }}"}
      ],
    {%- endif -%}
    "model_schema_name": "modules/stripe/webhook_endpoint",
    "properties": [
      { "name": "gateway_id", "value": "{{ body.id }}" },
      { "name": "url", "value": "{{ body.url }}" },
      { "name": "secret", "value": "{{ body.secret }}" },
      { "name": "livemode", "value": "{{ body.livemode }}" },
      { "name": "enabled_events", "value_array": ["account.updated"] }
    ]
  }
{%- else -%}
  {
    "errors": {{ body.error.message | json }}
  }
{%- endif -%}
