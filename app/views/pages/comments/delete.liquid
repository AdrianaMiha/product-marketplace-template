---
slug: comments
method: delete
---
{% liquid
  function current_profile = 'lib/current_profile', user_id: context.current_user.id
  include 'lib/profile_present_or_redirect', profile: current_profile

  function comment = 'lib/queries/comments/find', id: context.params.id
  include 'lib/present_or_404', property:  comment.id
  function object = 'lib/commands/call_delete', object: comment, command: 'comments/delete'

  if object.valid
    include 'lib/commands/events/create', type: 'comment_deleted', actor_id: current_profile.id, object_id: object.id, target_id: context.params.comment.commentable_id, delay: 0
    redirect_to context.params.return_to
  else
    echo object
  endif
%}
