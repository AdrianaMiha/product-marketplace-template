---
method: post
---
{% liquid
  include 'lib/must_be_authenticated'
  include 'lib/items/search', id: context.params.item.id
  include 'lib/items/validate', item: params.item, owner: context.exports.item.owner.id

  if context.exports.item.valid
    include 'lib/items/update', item: context.exports.item
    include 'lib/events/create-event', type: 'item_updated', actor_id: context.current_user.id, object_id: context.exports.item.id

    include 'lib/flash/publish', notice: 'app.item_updated'
    assign item_url = '/items/show?id=' | append: context.exports.item.id
    redirect_to item_url
    break
  else
    include 'lib/items/main'
    include 'lib/items/photos/presigned_url'

    include 'theme/simple/items/edit', item: context.exports.item
  endif
%}
