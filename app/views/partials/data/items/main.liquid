{% liquid
  assign icons = "alarm ambulance ban bandage calendar flame disc crop command compass copy stack star cut globe glass-full virus key trophy wand woman" | split: ' '
  export icons, namespace: 'lib'

  if id
    graphql item  = 'items/search', limit: 1, id: id | fetch: 'items' | fetch: 'results' | first
    export item
  endif
%}
