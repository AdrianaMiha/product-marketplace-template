{% liquid
  include 'data/items/validate', item: params.item, current_user_id: context.session.current_user_id

  if context.exports.item.valid
    include 'data/items/save', item: context.exports.item
    include 'async-operation', uuid: context.exports.last_operation_uuid, success: '/'
